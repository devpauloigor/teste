<%- model_class = Grupo -%>
<%= javascript_tag do %>
window.gruposURL = "<%=t grupos_url%>";
<%end%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
     
    
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @grupos.each do |grupo| %>
      <tr>
        <td><%= link_to grupo.id, grupo_path(grupo) %></td>

        <td><%= grupo.nome %></td>

        <td>
           <% link_to('Cadastrar Sub Grupo',new_sub_grupo_path, :class => 'btn btn-default btn-xs')   %>

          <%= link_to "Cadastrar Sub Grupo", "/sub_grupos?grupo_id="+grupo.id.to_s, :class => 'btn btn-primary btn-xs' %>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_grupo_path(grupo), :class => 'btn btn-primary btn-xs' %>

         

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      grupo_path(grupo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_grupo_path,
            :class => 'btn btn-primary' %>

 <%= link_to "Voltar", questoes_path, :class => 'btn btn-primary' %>
